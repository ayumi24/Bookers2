<h2>Book detail</h2>
<table>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %><br>
    <%= link_to book.user.name, user_path(book.id) %>
    </td>
    <td><p><%= link_to book.title, book_path(book.id) %></p></td>
    <td><p><%= book.body %></p></td>
  </tr>
  <% end %>
  </tbody>
</table>
