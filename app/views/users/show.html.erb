<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<h2>Books</h2>
<table>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan = "3"></th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><p><%= link_to book.title, book_path(book.id) %></p></td>
    <td><p><%= book.body %></p></td>
  </tr>
  <% end %>
  </tbody>
</table>