<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'use', user: @user, book: @book %>
    </div>
     <div class="col-md-9">
      <h2>Books</h2>
      <table class="table table-hover border-bottom">
        <thead>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan = "3"></th>
        </thead>
        <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><p><%= link_to book.title, book_path(book.id) %></p></td>
          <td><p><%= book.body %></p></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
