<div>
  <%= flash[:notice] %>
</div>
<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
<h2>Books</h2>
<table>
  <thead>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan = "3"></th>
  </thead>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image(100,100) %></td>
    <td><p><%= link_to book.title, book_path(book.id) %></p></td>
    <td><p><%= book.body %></p></td>
  </tr>
  <% end %>
  </tbody>
</table>