<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Bookers</a>
          <div class="collapse navbar-collapse justify-content-end">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to 'Home', user_path(current_user.id), class: "nav-link text-light" do %>
                <i class="fas fa-home"></i>
                <% end %>
              </li>
              <li>
                <%= link_to 'Users', users_path ,class:"nav-link text-light"%>
              </li>
              <li>
                <%= link_to 'Books', books_path ,class:"nav-link text-light"%>
              </li>
              <li>
                <%= link_to 'Log out', destroy_user_session_path, method: :delete ,class:"nav-link text-light"%>
              </li>
            <% else %>
              <li>
                <%= link_to 'Home',root_path ,class:"nav-link text-light"%>
              </li>
              <li>
                <%= link_to 'About',homes_about_path ,class:"nav-link text-light"%>
              </li>
              <li>
                <%= link_to 'Sign up', new_user_registration_path ,class:"nav-link text-light"%>
              </li>
              <li>
                <%= link_to 'Log in', new_user_session_path ,class:"nav-link text-light"%>
              </li>
            <% end %>
          </ul>
          </
        </div>
      </nav>
  </header>
    <%= yield %>
  </body>

  <footer>
    <div class="container">
      <div class="row">
        <div class="mx-auto">
    <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
